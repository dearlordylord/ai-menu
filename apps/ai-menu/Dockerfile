# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t ai-menu`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system ai-menu && \
          adduser --system -G ai-menu ai-menu

COPY dist/apps/ai-menu ai-menu/
RUN chown -R ai-menu:ai-menu .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix ai-menu --omit=dev -f install

CMD [ "node", "ai-menu" ]
